{{!< default}}

{{#page}}

{{> 'site-header'}}

{{> 'feature-image'}}

<main class="bigBoldCard">
	<stack-layout space="s5">
		<center-layout class="flow" max="50ch" gutters="var(--s0)">
			<h1>{{title}}</h1>

			{{{content}}}
		</center-layout>
		
		{{#get "posts" limit="3" filter="tag:-hash-university+tag:-hash-nhs-trust+tag:-hash-industry"}}
		<center-layout class="flow accent-terracotta" gutters="var(--s0)" max="80ch">
			<sidebar-layout sideWidth="12em" class="latest-posts" space="0" contentMin="70%">
				<header class="flow">
					<h2>Connecting</h2>
				</header>
				<stack-layout space="s3">
					{{#foreach posts}}
					<article class="flow" style="--flow: 0.5em">
						<h3>{{title}}</h3>
						<p>{{excerpt}}</p>
						<p>
							<a href="{{url}}">
								<icon-layout>
									Read on
									{{> "icon" name="right"}}
								</icon-layout>
							</a>
						</p>
					</article>
					{{/foreach}}

					<cluster-layout>
						<a href="/posts" class="kg-btn accent-dioptase">
							<icon-layout>
								More posts
								{{!-- {{> "icon" name="right"}} --}}
							</icon-layout>
						</a>
					</cluster-layout>
				</stack-layout>
			</sidebar-layout>
		</center-layout>
		{{/get}}

		{{#get "pages" filter="slug:contact-info" as |page|}}
		{{#page}}
		<center-layout class="flow accent-umber" max="50ch" gutters="var(--s0)">
			<sidebar-layout sideWidth="15ch" class="contact-info">
				<aspect-ratio ratio="1:1">
					<img src="{{feature_image}}" class="rounded">
				</aspect-ratio>
				<div class="flow" style="--flow: 0.5em">
					<h2>{{title}}</h2>
					{{{content}}}
				</div>
			</sidebar-layout>
		</center-layout>
		{{/page}}
		{{/get}}
	</stack-layout>
</main>

<div class="well accent-lazurite">
	<stack-layout space="s5">
		<center-layout gutters="var(--s0)">
			<box-layout class="card flow">
				<h2>Our partners</h2>

				{{#get "posts" filter="tag:hash-university" order="title ASC"}}
				{{> 'post-grid' posts=posts size="150px"}}
				{{/get}}
			</box-layout>
		</center-layout>

		{{> 'site-footer'}}
	</stack-layout>
</div>



{{/page}}
