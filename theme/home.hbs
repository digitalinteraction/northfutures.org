{{!< default}}

{{#page}}

{{> 'site-header'}}

{{> 'feature-image'}}

<main class="bigBoldCard">
	<stack-layout space="s5">
		<center-layout class="flow" max="50ch" gutters="var(--s0)">
			<h1>{{title}}</h1>

			{{{content}}}
		</center-layout>
		
		{{#get "posts" limit="3" filter="tag:-hash-university+tag:-hash-nhs-trust+tag:-hash-industry"}}
		<center-layout class="flow accent-terracotta" gutters="var(--s0)" max="80ch">
			<sidebar-layout sideWidth="12em" class="latest-posts" space="0" contentMin="70%">
				<header class="flow">
					<h2>Connecting</h2>
				</header>
				<stack-layout space="s3">
					{{#foreach posts}}
					<article class="flow" style="--flow: 0.5em">
						<h3>{{title}}</h3>
						<p>{{excerpt}}</p>
						<p>
							<a href="{{url}}">
								<icon-layout>
									Read on
									{{> "icon" name="right"}}
								</icon-layout>
							</a>
						</p>
					</article>
					{{/foreach}}

					<cluster-layout>
						<a href="/posts" class="kg-btn accent-dioptase">
							<icon-layout>
								More posts
								{{!-- {{> "icon" name="right"}} --}}
							</icon-layout>
						</a>
					</cluster-layout>
				</stack-layout>
			</sidebar-layout>
		</center-layout>
		{{/get}}

		{{> "contact"}}
	</stack-layout>
</main>

<div class="well accent-lazurite">
	<stack-layout space="s5">
		<center-layout gutters="s0">
			<box-layout class="card flow">
				<stack-layout space="s2">
					<section class="flow">
						{{#get "posts" filter="tag:hash-university+featured:true" order="title ASC" limit="all"}}
						{{#if posts}}
						<h3>Universities</h3>
						{{> 'post-grid' posts=posts size="140px"}}
						{{/if}}
						{{/get}}
					</section>
					
					<section class="flow">
						{{#get "posts" filter="tag:hash-nhs-trust+featured:true" order="title ASC" limit="all"}}
						{{#if posts}}
						<h3>NHS Trusts</h3>
						{{> 'post-grid' posts=posts size="150px"}}
						{{/if}}
						{{/get}}
					</section>
					
					<section class="flow">
						{{#get "posts" filter="tag:hash-industry+featured:true" order="title ASC" limit="all"}}
						{{#if posts}}
						<h3>Core partners</h3>
						{{> 'post-grid' posts=posts size="130px"}}
						{{/if}}
						{{/get}}
					</section>
				</stack-layout>
			</box-layout>
		</center-layout>

		{{> 'site-footer'}}
	</stack-layout>
</div>



{{/page}}
