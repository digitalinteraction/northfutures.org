{{#if isSecondary}}

<ul role="list">
	{{#foreach navigation}}
	<li>
		<a
			href="{{url absolute="true"}}"
			{{#if current}}aria-current="page"{{/if}}
		>
			{{label}}
		</a>
	</li>
	{{/foreach}}
</ul>

{{else}}

